<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @area.title %></h1>
      <p><%= @area.body %></p>
      <h2>Comments:</h2>
      <%= render @area.comments %>
      <%= render 'comments/form', comment: Comment.new, area: @area %>
    </div>
    <div class="col">
      <a href="https://www.accuweather.com/en/us/soddy-daisy-tn/37379/current-weather/2224929" class="aw-widget-legal"></a>
      <div id="awtd1522347588973" class="aw-widget-36hour"  data-locationkey="2224929" data-unit="f" data-language="en-us" data-useip="false" data-uid="awtd1522347588973" data-editlocation="true"></div>
      <script type="text/javascript" src="https://oap.accuweather.com/launch.js"></script>
    </div>
  </div>
</div>

<div>
  <%= link_to "Edit Area", edit_area_path(@area), class: 'btn btn-success' %>
  <%= link_to "Delete Area", @area, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this area?'} %>
</div>
