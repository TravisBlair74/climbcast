<h1>Add New Area</h1>

<div class="row">
  <div class="col-md-4">
    <h3>Guidelines:</h3>
    <ul>
      <li>Only Admins should add areas.</li>
      <li>Make sure the area doesn't already exist.</li>
      <li>Think twice before you add those super secret locals only areas.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @area do |f| %>
      <% if @area.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@area.errors.count, "error") %>.</h4>
          <ul>
            <% @area.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_group_tag(@area.errors[:title]) do %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter area title" %>
      <% end %>
      <%= form_group_tag(@area.errors[:body]) do %>
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter area description" %>
      <% end %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
